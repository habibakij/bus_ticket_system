<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.booking.SelectPayment"
    android:orientation="vertical"
    android:layout_margin="8sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10sp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/purple_500"
                app:cardElevation="10sp"
                app:cardCornerRadius="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/vehiclesInformation"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/name"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_car_name"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/name"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/journeyDateTime"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_car_date_time"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/journeyDateTime"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/seatRent"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_car_rent"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/seatRent"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/coachType"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_car_ac_type"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/acornon"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/from"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_car_from"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/from"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_car_to"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/purple_500"
                app:cardElevation="10sp"
                app:cardCornerRadius="10sp"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/holderInformation"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/name"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_holders_name"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/name"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/phoneText"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_holders_phone"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/phone"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/email"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_holders_email"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/email"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/seatNo"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_holders_total_seat"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/seatNo"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/from"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_holders_form"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/from"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.50sp"
                        android:background="@color/GRAY"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="30sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#EEEDFC"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txt_payment_holders_to"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:paddingStart="10sp"
                            android:paddingEnd="0sp"
                            android:gravity="center|start"
                            android:background="#E6E4FB"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/purple_500"
                app:cardElevation="10sp"
                app:cardCornerRadius="10sp"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/paymentInformation"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#EEEDFC">

                        <ImageView
                            android:id="@+id/image_bkash"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="90sp"
                            android:layout_margin="1sp"
                            android:src="@drawable/bkash"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/image_rocket"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="90sp"
                            android:layout_marginTop="1sp"
                            android:src="@drawable/roket"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/image_tcash"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="90sp"
                            android:src="@drawable/tcash"
                            android:layout_margin="1sp"
                            android:scaleType="fitXY"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#EEEDFC">

                        <ImageView
                            android:id="@+id/image_ucash"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="90sp"
                            android:src="@drawable/ucash"
                            android:layout_marginLeft="1sp"
                            android:layout_marginRight="1sp"
                            android:layout_marginBottom="1sp"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/image_surecash"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="90sp"
                            android:src="@drawable/surecash"
                            android:layout_marginStart="1sp"
                            android:layout_marginEnd="0sp"
                            android:layout_marginBottom="1sp"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/image_easycash"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="90sp"
                            android:src="@drawable/easycash"
                            android:layout_marginStart="0sp"
                            android:layout_marginEnd="1sp"
                            android:layout_marginBottom="1sp"
                            android:scaleType="fitXY"/>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>