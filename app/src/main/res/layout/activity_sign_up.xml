<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.registration.SignUp"
    android:orientation="vertical"
    android:padding="20sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/account_circle_24"
            app:tint="@color/purple_500" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_text_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_margin="10dp"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:background="@drawable/email_round"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            app:drawableTint="@color/purple_500"
            android:hint="@string/email"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="start|center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/white"/>

        <EditText
            android:id="@+id/edit_text_sign_up_phone"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:layout_height="45sp"
            android:layout_margin="10dp"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:background="@drawable/email_round"
            android:drawableStart="@drawable/ic_baseline_call"
            android:drawablePadding="10dp"
            app:drawableTint="@color/purple_500"
            android:hint="@string/phone"
            android:layout_gravity="start|center"
            android:textSize="12sp"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/white"/>

        <EditText
            android:id="@+id/edit_text_sign_up_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="45sp"
            android:layout_margin="10dp"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:background="@drawable/email_round"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            app:drawableTint="@color/purple_500"
            android:hint="@string/password"
            android:layout_gravity="start|center"
            android:textSize="12sp"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/white"/>

        <EditText
            android:id="@+id/edit_text_sign_up_con_password"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:inputType="textPassword"
            android:layout_margin="10dp"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:background="@drawable/email_round"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            app:drawableTint="@color/purple_500"
            android:hint="@string/confirm_password"
            android:layout_gravity="start|center"
            android:textSize="12sp"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="200sp"
            android:layout_height="45sp"
            android:textColor="@color/white"
            android:text="@string/register"
            android:textAllCaps="false"
            android:shadowColor="@android:color/transparent"
            android:layout_marginTop="10sp"
            android:background="@drawable/login_round"/>

    </LinearLayout>


</LinearLayout>